                        Stretch="Uniform" Fill="Gray" Stroke="Black" StrokeThickness="1" Width="20" Height="20" />
                        <Label ContentStringFormat="{}x {0}" Content="{Binding Ant.Bombs, ElementName=ThisControl, TargetNullValue='x 0'}" Width="40" />
