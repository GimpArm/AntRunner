                          Visibility="{Binding Ant.HasFlag, ElementName=ThisControl, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
            <Label Grid.Row="1" Grid.Column="0" Content="Health" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalAlignment="Stretch" />
            <Grid Grid.Row="1" Grid.Column="1">
                <Border BorderBrush="Black" BorderThickness="1" Background="Red" HorizontalAlignment="Stretch" Height="28" Margin="10,2">
                    <Grid Name="HealthBar">
                        <Border Background="Green" HorizontalAlignment="Left" VerticalAlignment="Stretch" >
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource LevelToBarWidthConverter}">
                                    <Binding ElementName="ThisControl" Path="Ant.Health" />
                                    <Binding ElementName="HealthBar" Path="ActualWidth" />
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                        <Label HorizontalAlignment="Right" VerticalAlignment="Center" Content="{Binding Ant.Health, ElementName=ThisControl}" ContentStringFormat="{}{0}%" FontWeight="Bold" Foreground="White" />
                    </Grid>
                </Border>
            </Grid>
            

            <Label Grid.Row="2" Grid.Column="0" Content="Shields" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalAlignment="Stretch" />
            <Grid Grid.Row="2" Grid.Column="1">
                <Border BorderBrush="Black" BorderThickness="1" Background="Red" HorizontalAlignment="Stretch" Height="28" Margin="10,5">
                    <Grid Name="ShieldBar">
                        <Border Background="Green" HorizontalAlignment="Left" VerticalAlignment="Stretch" >
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource LevelToBarWidthConverter}">
                                    <Binding ElementName="ThisControl" Path="Ant.Shields" />
                                    <Binding ElementName="ShieldBar" Path="ActualWidth" />
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                        <Label HorizontalAlignment="Right" VerticalAlignment="Center" Content="{Binding Ant.Shields, ElementName=ThisControl}" ContentStringFormat="{}{0}%" FontWeight="Bold" Foreground="White" />
                    </Grid>
                </Border>
            </Grid>
            
            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3" Background="Black" Opacity="0.3"
                  Visibility="{Binding Ant.Health, ElementName=ThisControl, Converter={StaticResource HealthToVisibilityConverter}, ConverterParameter=invert}"/>
        </Grid>
    </Border>
</UserControl>
