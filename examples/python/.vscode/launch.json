    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Python",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            "windows": {
                "pythonPath": "${config:antrunner.root}\\Wrappers\\python\\ipy.exe"
            },
            "port": 25494,
            "host": "127.0.0.1",
            "preLaunchTask": "AntRunner",
            "postDebugTask": "KillAntRunner"
        }
    ]
}